<Page x:Class="SportComplexNaumov.AllPages.abonement"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SportComplexNaumov.AllPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="abonement">

    <Border>
        <Border.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                <GradientStop Color="#060531" Offset="0"/>
                <GradientStop Color="#1B1448" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Название секции" Foreground="White"/>
                    <ComboBox SelectedItem="{Binding Cekcia}" Grid.Column="1" Grid.Row="2" x:Name="ComboCountries" DisplayMemberPath="cekcia1"></ComboBox>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <TextBlock Text="Клиент" Foreground="White"/>
                    <ComboBox SelectedItem="{Binding Client}" x:Name="ComboClentt" DisplayMemberPath="name"></ComboBox>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Инструктор" Foreground="White"/>
                    <ComboBox SelectedItem="{Binding Instryctor}" x:Name="Comboinstryctorr" DisplayMemberPath="name_instryctora"></ComboBox>
                </StackPanel>
                <StackPanel Grid.Column="3">
                    <TextBlock Text="Время" Foreground="White"/>
                    <ComboBox SelectedItem="{Binding time}" x:Name="Combotimee" DisplayMemberPath="timee"></ComboBox>
                </StackPanel>

            </Grid>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <DataGrid x:Name="DGridAbonement" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Номер абонемента" Binding="{Binding id}" Width="*"/>
                            <DataGridTextColumn Header="Номер секции" Binding="{Binding id_section}" Width="*"/>
                            <DataGridTextColumn Header="Номер клиента" Binding="{Binding id_client}" Width="*"/>
                            <DataGridTextColumn Header="Номер инстуктора" Binding="{Binding id_instryrtor}" Width="*"/>
                            <DataGridTextColumn Header="Время" Binding="{Binding date}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Content="Добавить"  Name="BtnAdd" />
                    <Button Content="Удалить" Name="BtnDelete" />
                </StackPanel>
            </Grid>
            
        </Grid>
    </Border>
</Page>
