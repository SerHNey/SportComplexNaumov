<Page x:Class="SportComplexNaumov.AllPages.trenirovki"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SportComplexNaumov.AllPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="trenirovki">

    <Border>
        <Border.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                <GradientStop Color="#060531" Offset="0"/>
                <GradientStop Color="#1B1448" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <StackPanel>
              <DataGrid x:Name="DGridTrenirovki" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Номер тренировки" Binding="{Binding id}" Width="*"/>
                    <DataGridTextColumn Header="Тренировка" Binding="{Binding name_trenirovki}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
                <Button Content="Добавить"  Name="BtnAdd" />
                <Button Content="Удалить" Name="BtnDelete" />
            </StackPanel>

            
        </Grid>
    </Border>
</Page>
